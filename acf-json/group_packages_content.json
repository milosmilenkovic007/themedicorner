[
    {
        "key": "group_packages_content",
        "title": "Packages Content",
        "fields": [
            {
                "key": "field_packages_header",
                "label": "Page Header",
                "name": "packages_header",
                "type": "group",
                "layout": "block",
                "sub_fields": [
                    {
                        "key": "field_header_title",
                        "label": "Title",
                        "name": "title",
                        "type": "text"
                    },
                    {
                        "key": "field_header_subtitle",
                        "label": "Subtitle",
                        "name": "subtitle",
                        "type": "textarea",
                        "rows": 3
                    },
                    {
                        "key": "field_header_image",
                        "label": "Header Image",
                        "name": "image",
                        "type": "image",
                        "return_format": "id"
                    },
                    {
                        "key": "field_header_cta_text",
                        "label": "CTA Button Text",
                        "name": "cta_text",
                        "type": "text",
                        "default_value": "Get a free consultation"
                    },
                    {
                        "key": "field_header_cta_link",
                        "label": "CTA Button Link",
                        "name": "cta_link",
                        "type": "link"
                    }
                ]
            },
            {
                "key": "field_package_sections",
                "label": "Package Sections",
                "name": "package_sections",
                "type": "repeater",
                "layout": "block",
                "button_label": "Add Package Section",
                "sub_fields": [
                    {
                        "key": "field_section_title",
                        "label": "Section Title",
                        "name": "section_title",
                        "type": "text"
                    },
                    {
                        "key": "field_section_description",
                        "label": "Section Description",
                        "name": "section_description",
                        "type": "wysiwyg",
                        "toolbar": "basic",
                        "media_upload": 0
                    },
                    {
                        "key": "field_packages_repeater",
                        "label": "Packages",
                        "name": "packages",
                        "type": "repeater",
                        "layout": "block",
                        "button_label": "Add Package",
                        "sub_fields": [
                            {
                                "key": "field_pkg_name",
                                "label": "Package Name",
                                "name": "name",
                                "type": "text",
                                "required": 1
                            },
                            {
                                "key": "field_pkg_price",
                                "label": "Price",
                                "name": "price",
                                "type": "text",
                                "required": 1
                            },
                            {
                                "key": "field_pkg_currency",
                                "label": "Currency",
                                "name": "currency",
                                "type": "select",
                                "choices": {
                                    "EUR": "€ EUR",
                                    "USD": "$ USD",
                                    "RSD": "дин RSD"
                                },
                                "default_value": "EUR"
                            },
                            {
                                "key": "field_pkg_features",
                                "label": "Features",
                                "name": "features",
                                "type": "wysiwyg",
                                "toolbar": "basic",
                                "media_upload": 0,
                                "instructions": "Use list format for features"
                            },
                            {
                                "key": "field_pkg_btn_text",
                                "label": "Button Text",
                                "name": "button_text",
                                "type": "text",
                                "default_value": "Book Now"
                            },
                            {
                                "key": "field_pkg_btn_link",
                                "label": "Button Link",
                                "name": "button_link",
                                "type": "link"
                            },
                            {
                                "key": "field_pkg_featured",
                                "label": "Featured Package",
                                "name": "is_featured",
                                "type": "true_false",
                                "ui": 1
                            },
                            {
                                "key": "field_pkg_badge",
                                "label": "Badge Text",
                                "name": "badge_text",
                                "type": "text",
                                "instructions": "e.g., \"Most Popular\", \"Best Value\""
                            }
                        ]
                    }
                ]
            },
            {
                "key": "field_cta_section",
                "label": "Bottom CTA Section",
                "name": "cta_section",
                "type": "group",
                "layout": "block",
                "sub_fields": [
                    {
                        "key": "field_cta_enabled",
                        "label": "Show CTA Section",
                        "name": "enabled",
                        "type": "true_false",
                        "ui": 1
                    },
                    {
                        "key": "field_cta_heading",
                        "label": "Heading",
                        "name": "heading",
                        "type": "text",
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_cta_enabled",
                                    "operator": "==",
                                    "value": "1"
                                }
                            ]
                        ]
                    },
                    {
                        "key": "field_cta_text",
                        "label": "Text Content",
                        "name": "text",
                        "type": "textarea",
                        "rows": 3,
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_cta_enabled",
                                    "operator": "==",
                                    "value": "1"
                                }
                            ]
                        ]
                    },
                    {
                        "key": "field_cta_btn_text",
                        "label": "Button Text",
                        "name": "button_text",
                        "type": "text",
                        "default_value": "Schedule Your Check-up",
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_cta_enabled",
                                    "operator": "==",
                                    "value": "1"
                                }
                            ]
                        ]
                    },
                    {
                        "key": "field_cta_btn_link",
                        "label": "Button Link",
                        "name": "button_link",
                        "type": "link",
                        "conditional_logic": [
                            [
                                {
                                    "field": "field_cta_enabled",
                                    "operator": "==",
                                    "value": "1"
                                }
                            ]
                        ]
                    }
                ]
            }
        ],
        "location": [
            [
                {
                    "param": "post_id",
                    "operator": "==",
                    "value": "590"
                }
            ]
        ],
        "menu_order": 0,
        "position": "normal",
        "style": "default",
        "label_placement": "top",
        "instruction_placement": "label",
        "hide_on_screen": "",
        "active": true,
        "description": "ACF field group for Our Packages page content"
    }
]
